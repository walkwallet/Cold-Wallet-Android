<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/normal_padding"
    android:background="@drawable/bg_unable_radius_8"
    android:orientation="vertical"
    android:paddingBottom="56dp">

    <ImageView
        android:id="@+id/iv_close"
        style="?attr/toolbarNavigationButtonStyle"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="end"
        android:padding="@dimen/normal_padding"
        android:src="@drawable/ico_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/confirmtx_dialog_title"
                android:textColor="@color/text_strong"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/confirmtx_dialog_tip"
                android:textColor="@color/text_weak"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_width="176dp"
            android:layout_height="176dp"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:background="@color/white"
            android:src="@drawable/ico_qr_code" />


        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_orange_radius_6"
            android:gravity="center"
            android:text="@string/complete"
            android:textColor="@color/text_strong"
            android:textSize="16sp" />
    </LinearLayout>
</FrameLayout>